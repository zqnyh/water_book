<body>
    <%if(user.admin===0){%>
<div class="page">
    <header class="bar bar-nav">
        <h1 class="title">订水系统</h1>
    </header>
    <nav class="bar bar-tab">
        <a class="tab-item active" href="#">
            <span class="icon icon-home"></span>
            <span class="tab-label">订水</span>
        </a>
        <a class="tab-item" href="/payed">
            <span class="icon icon-cart"></span>
            <span class="tab-label">订单</span>
        </a>
    </nav>

    <div class="content">
         
         <input type="hidden" value=<%=user._id%> />
         <div class="list-block">
            <ul>
                <!-- Text inputs -->
                <li>
                    <div class="item-content">
                        <div class="item-media"><i class="icon icon-form-name"></i></div>
                        <div class="item-inner">
                            <!--<div class="item-title label">water_name</div>-->
                            <div class="item-input">
                                <input type="text" placeholder="生命之水*桶（2桶起）">
                            </div>
                        </div>
                    </div>
                </li>
                <li>

                <!--桶的数量-->
                <li>
                    <div class="item-content">
                        <div class="item-media"><i class="icon icon-right"></i></div>
                        <div class="item-inner">
                            <div class="item-title label">桶的数量</div>
                            <div class="item-input">
                                <input type="text" placeholder="num" value="2">
                            </div>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="item-content">
                        <div class="item-media"><i class="icon icon-edit"></i></div>
                        <div class="item-inner">
                            <div class="item-title label">姓名</div>
                            <div class="item-input">
                                <input type="text" placeholder="name" value=<%= user.name%>>
                            </div>
                        </div>
                    </div>
                </li>
                <!--送货地址-->
                <li>
                    <div class="item-content">
                        <div class="item-media"><i class="icon icon-browser"></i></div>
                        <div class="item-inner">
                            <div class="item-title label">送货地址</div>
                            <div class="item-input">
                                <input type="text" placeholder="num" value=<%= user.address%>>
                            </div>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="item-content">
                        <div class="item-media"><i class="icon icon-phone"></i></div>
                        <div class="item-inner">
                            <div class="item-title label">联系方式</div>
                            <div class="item-input">
                                <input type="text" placeholder="num" value=<%= user.phoneNum%>>
                            </div>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
        <div class="content-block">
            <div class="row">
                <div class="col-50"><a href="/loginout" class="left button button-big button-fill button-danger">退出</a></div>
                <div class="col-50"><a href="/cart/paying/<%=user._id%>" onClick="return confirm('订单已添加，请点击确定，点击订单查看');" class="left button button-big button-fill button-success">提交</a></div> 
            </div>

        </div>
          
</div>
    </div>
    </div>
</div>
    <%}else{%>
        <header class="bar bar-nav">
            <h1 class='title'>订单统计（查看）</h1>
        </header>
        <div class="content">
           
            <div class="buttons-tab">
            <a href="#tab1" class="tab-link active button">未送达</a>
            <a href="#tab2" class="tab-link button">送达已付款</a>
            </div>
            <div class="content-block">
                <div class="tabs">
                    <div id="tab1" class="tab active">
                         <div class="content-block">
                            <%if(doc.length){%>  
                            <%doc.forEach(function(cart){%>
                            <%if(!cart.reached){%>
                                  <div class="box">
                                    <img src="/images/饮用水.jpg"/>
                                    <div class="right">
                                        <div class="pay button button-success" style=" display:inline-block ;">姓名：<%=cart.name%></div>
                                        <div class="address button button-success">宿舍楼：<%=cart.address%></div>
                                        <div class="phoneNum button-success" style=" display:inline-block ;">联系方式:<%=cart.phoneNum%></div>
                                        <div class="reached button button-big button-danger"><a href="/reached/<%=cart._id%>">送达确认</a></div>·
                                    </div>       
                             
                                </div>
                                <%}%>
                                
                            <%})%>
                             <%}%>
                         </div>
                    </div>
                    <div id="tab2" class="tab">
                         <div class="content-block">
                               <%if(doc.length){%>  
                            <%doc.forEach(function(cart){%>
                            <%if(cart.reached){%>
                                  <div class="box">
                                    <img src="/images/饮用水.jpg"/>
                               <div class="right">
                          <div class="reached">
                              <a href="#" class="button button-big button-round">已送达</a>
                          </div>
                          <div class="payed"><%if(cart.pay){%>
                                <a href="#" class="button button-big button-round">已付款</a> <%}%></div>
                          <div class="time"><%=cart.meta.updateAt.toLocaleDateString()
                          %>  <%=cart.meta.updateAt.toLocaleTimeString()%></div>
                      </div>
                   </div>
                                
                                <%}%>
                               <%})%>
                               <%}%>
                         </div>
                    </div>
                </div>
            </div>
        </div>




    <%}%>





    <script type="text/javascript">
        $.config = {
        // 路由功能开关过滤器，返回 false 表示当前点击链接不使用路由
        routerFilter: function($link) {
            // 某个区域的 a 链接不想使用路由功能
            if ($link.is('.col-50 a')) {
                return false;
            }

            return true;
        }
    };
  
    </script>

    
     
</body>
